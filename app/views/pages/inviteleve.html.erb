<html>
  <head>
    <div class="row">
      <div class="col-md-12 bg-primary">
        <h1 class="text-center">Inviter des élèves</h1>
      </div>
    </div>
  </head>
  <body>
    <div class="col-md-12 text-center">
      <div class="row">
        <div class="col-md-5">
        <%= form_tag "/pages/inviteleve", method: :post do %>
        <div class="form-group">
          <label>Nom de l'élève : <input type="text" class="form-control" name="nom"></label>
        </div>
        <div class="form-group">
          <label>Prénom de l'élève : <input type="text" class="form-control" name="prenom"></label>
        </div>
        <div class="form-group">
          <label>Addresse email de l'élève : <input type="email" class="form-control" name="email"></label>
        </div>
          <input class="btn btn-success hover" type="submit" value="Inviter">
        <% end %>
        <%= flash[:info] %>
      </div>
      <p> <%= @test %></p>
    <a href="/pages/prof">Liste des matière</a>
  </body>
</html>

<html>
<head>
  <div class="row">
    <div class="col-md-12 bg-primary">
      <h1 class="text-center">Ajouter une épreuve</h1>
    </div>
  </div>
</head>
<body>
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Menu</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/pages/home">Deconnexion<span class="sr-only"></span></a></li>
              <li><a href="/pages/examprof">Liste des épreuves</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="col-md-12 text-center">
  <%= form_tag "/pages/ajoutexam", method: :post do %>
  <div class="form-group">
    <label>Nom de l'épreuve : <input type="text" class="form-control" name="epreuve"></label>
  </div>
  <div class="form-group">
    <label>Date de l'épreuve : <input type="date_select" class="form-control" name="date"></label>
  </div>
    <input type="hidden" name="matiere" value="<%= @matiere.id %>">
    <input type="submit" class="btn btn-success hover" value="Ajouter">
  <% end %>
</div>
</div>
</body>
</html>

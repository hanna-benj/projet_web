<html>
<head>
  <div class="row">
    <div class="col-md-12 bg-primary">
        <h1 class="text-center">Bonjour Administrateur</h1>
    </div>
  </div>
</head>
<body>
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Menu</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/pages/home">Home<span class="sr-only"></span></a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="col-md-12 text-center">
      <p class="lead"><strong>Professeurs en attente</strong></p>
    </div>
<div class="col-md-12 text-center">
<%@teacher_attente.each do |prof_attente| %>
<p class="lead"><span class="alert alert-info"><strong><%= prof_attente.surname %> <%= prof_attente.name %> <%= prof_attente.email %></strong></span></p>
<div class="col-md-6 text-right">
<%= form_tag "/pages/admin", method: :post do %>
  <input type="hidden" name="id" value="<%= prof_attente.id %>">
  <input type="submit" class="btn btn-success hover" value="Autoriser">
<% end %>
</div>
<div class="col-md-6 text-left">
<%= form_tag "/pages/admin", method: :delete do %>
  <input type="hidden" name="id" value="<%= prof_attente.id %>">
  <input type="submit" class="btn btn-danger hover" value="Refuser">
<% end %>
</div>
<% end %>
</div>
</div>
</body>
</html>

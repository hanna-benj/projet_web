<html>
<head>
  <div class="row">
    <div class="col-md-12 bg-primary">
      <h1 class="text-center">Bonjour <%= @prof.name%>!</h1>
    </div>
  </div>
</head>
<body>
  <div class="row">
    <div class="col-md-12">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Menu</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/pages/home">Deconnexion<span class="sr-only"></span></a></li>
              <li><a href="/pages/ajoutmatiere">Ajout d'une matière</a></li>
              <li><a href="/pages/inviteleve">Inviter un élève</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  <br/><br/>
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Matière</th>
      <th>Date de début</th>
      <th>Date de fin</th>
      <th>Examens</th>
    </tr>
  </thead>
    <%@matiere.each do |mat| %>
    <tbody>
    <tr>
      <td><%= mat.title %></td>
      <td> <%= mat.begin.strftime("%d/%m/%Y") %></td>
      <td> <%= mat.end.strftime("%d/%m/%Y") %></td>
    <td>
      <%= form_tag "/pages/prof", method: "post" do %>
        <input type="hidden" name="id_mat" value="<%= mat.id %>">
        <input type="submit" class="btn btn-primary hover" value="Examens">
      <% end %>
    </td>
  </tr>
</tbody>
    <% end %>
  </table>
</div>
<div class="col-md-3">
</div>
</div>
</body>
</html>
